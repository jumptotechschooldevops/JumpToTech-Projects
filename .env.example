# Application Configuration
APP_NAME=task-manager-api
APP_VERSION=1.0.0
APP_ENVIRONMENT=local
SPRING_PROFILE=local

# Server Configuration
SERVER_PORT=8080
CONTEXT_PATH=/api

# Database Configuration
DB_URL=jdbc:h2:mem:taskdb
DB_USERNAME=sa
DB_PASSWORD=
DB_DRIVER=org.h2.Driver
DDL_AUTO=update
SHOW_SQL=true
HIBERNATE_DIALECT=org.hibernate.dialect.H2Dialect

# H2 Console (Local only)
H2_CONSOLE_ENABLED=true
H2_CONSOLE_PATH=/h2-console

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=2000
REDIS_POOL_MAX_ACTIVE=8
REDIS_POOL_MAX_IDLE=8
REDIS_POOL_MIN_IDLE=0

# Cache Configuration
CACHE_TYPE=redis
CACHE_ENABLED=true
CACHE_TTL=600

# Actuator Configuration
ACTUATOR_ENDPOINTS=health,info,metrics,prometheus
ACTUATOR_BASE_PATH=/actuator
HEALTH_SHOW_DETAILS=always
PROMETHEUS_ENABLED=true

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING_WEB=INFO
LOG_LEVEL_HIBERNATE=INFO
LOG_FILE=logs/task-manager.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_HISTORY=30
